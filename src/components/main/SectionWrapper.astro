---
export interface SectionWrapperProps {
  id?: string;
  background?: 'red' | 'white';
  centered?: boolean;
}
const { id, background = 'white', centered = false } = Astro.props;
---

<section
  id={id}
  class={`section-wrapper ${background === 'red' ? 'bg-gradient-to-b from-red-900 to-red-700' : 'bg-white'} ${
    centered ? 'text-center' : ''
  }`}
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <slot />
  </div>
</section>
