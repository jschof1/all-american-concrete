---
import { fetchContent } from '../../utils/fetchContent';
const contentMap = await fetchContent('Team');
---
<section class="py-16 px-16 bg-red-900 text-white" id="team">
        <h2 class="text-2xl sm:text-3xl font-bold mb-8 text-center sm:text-left">{contentMap['1h2Insection']}</h2>
        <div class="flex flex-wrap">
          <div class="w-full sm:w-1/2 lg:w-1/3 px-4 mb-8">
            <img src="https://placehold.co/300x300?text=Team+Member" alt="Portrait of Sarah Miller" class="w-full h-64 object-cover mb-4">
            <h3 class="font-bold text-xl mb-2 text-center lg:text-left">{contentMap['1h3Indiv']}</h3>
            <p class="text-center lg:text-left">
              {contentMap['1pIndiv']}
            </p>
          </div>
          <div class="w-full sm:w-1/2 lg:w-1/3 px-4 mb-8">
            <img src="https://placehold.co/300x300?text=Team+Member" alt="Portrait of David Carter" class="w-full h-64 object-cover mb-4">
            <h3 class="font-bold text-xl mb-2 text-center lg:text-left">{contentMap['2h3Indiv']}</h3>
            <p class="text-center lg:text-left">
              {contentMap['2pIndiv']}
            </p>
          </div>
          <div class="w-full sm:w-1/2 lg:w-1/3 px-4 mb-8">
            <img src="https://placehold.co/300x300?text=Team+Member" alt="Portrait of Emily Davis" class="w-full h-64 object-cover mb-4">
            <h3 class="font-bold text-xl mb-2 text-center lg:text-left">{contentMap['3h3Indiv']}</h3>
            <p class="text-center lg:text-left">
              {contentMap['3pIndiv']}
            </p>
          </div>
        </div>
        <div class="text-center mt-8">
          <button class="bg-white text-red-800 px-6 py-3 font-bold">{contentMap['1buttonIndiv']}</button>
        </div>
      </section>

