---
import { fetchContent } from '../../utils/fetchContent';
const contentMap = await fetchContent('Hero');
import Image from '~/components/common/Image.astro';
import AllAmericanLogo from '~/assets/images/all-american-logo-text.webp';
import wideBg from '~/assets/images/wide-bg.webp';
---
<section class="relative h-screen">
        <div class="container mx-auto h-full flex flex-col justify-center items-start text-white relative z-10 px-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000" data-aos-easing="ease-in-out">
          <h1 class="text-5xl md:text-5xl font-medium mb-4 flex items-center" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1100" data-aos-easing="ease-in-out">
            <Image src={AllAmericanLogo} alt="All American Logo" class="inline-block mt-4 h-12 md:h-20">
          </h1>
          <p class="text-5xl md:text-8xl font-medium mb-4" data-aos="fade-up" data-aos-delay="300" data-aos-duration="1200" data-aos-easing="ease-in-out">
            {contentMap['1pIndiv']}
          </p>
          <p class="text-lg md:text-2xl mb-8 max-w-lg" data-aos="fade-up" data-aos-delay="400" data-aos-duration="1300" data-aos-easing="ease-in-out">
           {contentMap['2pIndiv']}
          </p>
          <div class="flex items-center space-x-4" data-aos="fade-up" data-aos-delay="500" data-aos-duration="1400" data-aos-easing="ease-in-out">
            <button class="bg-red-700 text-white font-bold py-3 px-6 rounded hover:bg-white hover:text-red-700 hover:border-2 hover:border-red-700 transition duration-300">
              {contentMap['1buttonIndiv']}
            </button>
          </div>
          <div class="mt-12" data-aos="fade-up" data-aos-delay="600" data-aos-duration="1500" data-aos-easing="ease-in-out">
            <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-12">
              <div class="border-t border-red-700" data-aos="fade-up" data-aos-delay="700" data-aos-duration="1600" data-aos-easing="ease-in-out">
                <h3 class="text-xl md:text-2xl font-bold mt-4 mb-2">{contentMap['1h3Indiv']}</h3>
                <p>{contentMap['3pIndiv']}</p>
              </div>
              <div class="border-t border-red-700" data-aos="fade-up" data-aos-delay="800" data-aos-duration="1700" data-aos-easing="ease-in-out">
                <h3 class="text-xl md:text-2xl font-bold mt-4 mb-2">{contentMap['2h3Indiv']}</h3>
                <p>{contentMap['4pIndiv']}</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    