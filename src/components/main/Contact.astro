---
import { fetchContent } from '../../utils/fetchContent';
const contentMap = await fetchContent('Contact');
import Image from '~/components/common/Image.astro';
import wideBg from '~/assets/images/wide-bg.webp';
---
<section class="mx-auto py-12 px-12 flex flex-wrap lg:flex-nowrap justify-between items-center bg-red-900 gap-8" id="contact">
        <div class="w-full sm:w-1/2 lg:w-1/3 mb-10 lg:mb-0">
          <Image src={wideBg} alt="Concrete workers on site" class="w-full h-56 object-cover">
        </div>

        <div class="w-full sm:w-1/2 lg:w-1/3 text-center mb-10 lg:mb-0">
          <h2 class="text-xl sm:text-2xl font-bold mb-4 text-white">{contentMap['1h2Indiv']}</h2>
          <p class="text-gray-200 mb-4">{contentMap['1pIndiv']}</p>
          <button class="bg-white text-red-800 px-5 py-2 font-bold">{contentMap['1buttonIndiv']}</button>
        </div>

        <div class="w-full lg:w-1/3 bg-gray-700 p-5 sm:p-6 text-white">
          <h3 class="font-bold text-lg sm:text-xl mb-4 text-center lg:text-left">{contentMap['1h3Indiv']}</h3>
          <p class="mb-4 text-center lg:text-left">
            {contentMap['2pIndiv']}
          </p>
          <form name="contact" netlify>
            <input type="email" placeholder="Your email address" class="w-full mb-4 p-2 text-black rounded">
            <button class="bg-white text-red-800 w-full py-2 font-bold rounded">{contentMap['2buttonInform']}</button>
          </form>
        </div>
      </section>

      <section class="flex items-center justify-between p-12 bg-gray-100 gap-8" style="background-image: url('https://placehold.co/1920x1080/white'); background-size: cover">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800">{contentMap['2h2Indiv']}</h2>
          <p class="text-gray-600 mt-2">
            Whether youâ€™re a homeowner, business owner, or property manager, All American Concrete has the skills and
            dedication to meet your needs.
          </p>
          <button class="bg-red-800 text-white font-semibold py-2 px-5 rounded hover:bg-white hover:text-red-800 mt-4">
            {contentMap['3buttonInsection']}
          </button>
        </div>
      </section>