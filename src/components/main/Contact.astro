---
import { fetchContent } from '../../utils/fetchContent';
const contentMap = await fetchContent('Contact');
import Image from '~/components/common/Image.astro';
import wideBg from '~/assets/images/wide-bg.webp';
---
<section class="mx-auto py-16 px-16 flex flex-wrap lg:flex-nowrap justify-between items-center bg-red-900">
        <div class="w-full sm:w-1/2 lg:w-1/3 mb-8 lg:mb-0">
          <Image src={wideBg} alt="Concrete workers on site" class="w-full h-64 object-cover">
        </div>

        <div class="w-full sm:w-1/2 lg:w-1/3 text-center mb-8 lg:mb-0">
          <h2 class="text-2xl sm:text-3xl font-bold mb-4 text-white">{contentMap['1h2Indiv']}</h2>
          <p class="text-gray-200 mb-6">{contentMap['1pIndiv']}</p>
          <button class="bg-white text-red-800 px-6 py-3 font-bold">{contentMap['1buttonIndiv']}</button>
        </div>

        <div class="w-full lg:w-1/3 bg-gray-700 p-6 sm:p-8 text-white">
          <h3 class="font-bold text-xl sm:text-2xl mb-4 text-center lg:text-left">{contentMap['1h3Indiv']}</h3>
          <p class="mb-4 text-center lg:text-left">
            {contentMap['2pIndiv']}
          </p>
          <form>
            <input type="email" placeholder="Your email address" class="w-full mb-4 p-2 text-black rounded">
            <button class="bg-white text-red-800 w-full py-2 font-bold rounded">{contentMap['2buttonInform']}</button>
          </form>
        </div>
      </section>

      <section class="flex items-center justify-between p-16 bg-gray-100" style="background-image: url('https://placehold.co/1920x1080/white'); background-size: cover">
        <div>
          <h2 class="text-3xl font-semibold text-gray-800">{contentMap['2h2Indiv']}</h2>
          <p class="text-gray-600 mt-2">
            Whether youâ€™re a homeowner, business owner, or property manager, All American Concrete has the skills and
            dedication to meet your needs.
          </p>
        </div>
        <button class="bg-red-800 text-white font-semibold py-3 px-6 rounded hover:bg-white hover:text-red-800">
          {contentMap['3buttonInsection']}
        </button>
      </section>
    