    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/',
      },
    ]}
    title="Explore Our Concrete Services"
    subtitle="Whether it's residential or commercial, All American Concrete in Michigan is your trusted partner for quality concrete solutions."
  /> -->
  <CTA />
</Layout>
